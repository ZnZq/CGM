<Application x:Class="CGM_by_ZnZ.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CGM_by_ZnZ"
             xmlns:converters="clr-namespace:CGM_by_ZnZ.Converters"
             xmlns:vm="clr-namespace:CGM_by_ZnZ.VM"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <converters:AddCharMaskConverter x:Key="AddCharMaskConverter"/>
        <converters:ProgressMultiConverter x:Key="ProgressMultiConverter"/>

        <Style TargetType="TextBox">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Height" Value="25"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Height" Value="25"/>
        </Style>
    </Application.Resources>
</Application>
